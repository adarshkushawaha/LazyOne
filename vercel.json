{
  "version": 2,
  "builds": [
    {
      "src": "LazyOne/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includeFiles": "basic/templates/**",
        "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --no-input"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "LazyOne/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "LazyOne.settings"
  }
}